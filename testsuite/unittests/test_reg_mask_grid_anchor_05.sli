 [30 -0.5 -0.5]
 [31 -0.25 0.5]
 [32 -0.25 0.25]
 [33 -0.25 0]
 [34 -0.25 -0.25]
 [35 -0.25 -0.5]
 [36 0 0.5]
 [37 0 0.25]
 [38 0 0]
 [39 0 -0.25]
 [40 0 -0.5]
 [41 0.25 0.5]
 [42 0.25 0.25]
